{
  "name": "Node.js",
  "build": {
    "dockerfile": "Dockerfile",
    "args": { "VARIANT": "14" }
  },
  "settings": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "eslint.workingDirectories": [
      {
        "pattern": "packages/*"
      }
    ],
    "search.exclude": {
      "**/.yarn": true,
      "**/.pnp.*": true
    }
  },
  "extensions": ["arcanis.vscode-zipfs", "dbaeumer.vscode-eslint", "esbenp.prettier-vscode"],
  "postCreateCommand": "yarn install",
  "remoteUser": "node"
}
